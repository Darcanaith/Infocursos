@using Infocursos.Models
@{
    ViewBag.Title = "Curso";
}
<div class="container" style="margin:5em;">
    <div class="main-body">
        <div class="row gutters-sm">
            <div class="col-md-7 mb-2">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <div class="card-body" id="divCurso">
                                <div class="d-flex flex-column align-items-left text-left">
                                    <div class="mt-3 align-items-right text-right" style="text-align:right;">
                                        <button class="btn btn-outline-primary">Inscribirme</button>
                                    </div>

                                    <div class="mt-3">
                                        <div class="row">
                                            <div class="col-sm-3">
                                                <h6 class="mb-0">
                                                    <img src="~/Content/assets/img/Formador/defaultImg.png" alt="Admin" width="100">
                                                </h6>
                                            </div>
                                            <div class="col-sm-2 text-secondary">
                                                @(((Curso)@ViewData["Curso"]).Curso_nombre)
                                            </div>
                                            <div class="col-sm-2 text-secondary">
                                                @(((Curso)@ViewData["Curso"]).Formador.User_Nombre)
                                            </div>
                                            <div class="col-sm-2 text-secondary">
                                                @(((Curso)@ViewData["Curso"]).Horas_totales) Horas
                                            </div>
                                            <div class="col-sm-2 text-secondary">
                                                @(((Curso)@ViewData["Curso"]).Fecha_inicio)Fecha Inicio-Fecha Final@(((Curso)@ViewData["Curso"]).Fecha_final)
                                            </div>
                                        </div>
                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-2 px-3">
                    <div class="mt-3">
                        <h4>Descripcion.</h4>
                        <p class="text-secondary">
                            @(((Curso)@ViewData["Curso"]).Curso_descripcion)
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/Content/assets/img/Formador/defaultImg.png" alt="Admin" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@(((Curso)@ViewData["Curso"]).Formador.Nombre_Entidad)</h4>
                                <p class="text-secondary mb-1">@(((Curso)@ViewData["Curso"]).Formador.User_Resumen)</p>
                                <p class="text-muted font-size-sm">Localizacion</p>
                                <button class="btn btn-primary">Sitio web</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>