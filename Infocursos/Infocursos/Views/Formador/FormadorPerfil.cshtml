@using Infocursos.Models
 
@{
    ViewBag.Title = "FormadorPerfil";
}
<div class="container" style="margin:5em;">
    <div class="main-body">
        <!-- /Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-left text-left" style="padding:0.5em;background-image: url(/Content/assets/img/Banners/jaggerBanner.png); background-repeat: no-repeat; background-size: 100% 80%;">
                            @using (Html.BeginForm("FormadorEditarPerfil", "Formador", FormMethod.Post))
                            {
                                <div class="mt-3 align-items-right text-right" style="text-align:right;">
                                    <button class="btn btn-primary" value="UpdateFormadorPerfil">Editar</button>
                                </div>
                            }
                            <img src="~/ImagenPerfilFormador/@ViewData["IMG_Perfil"]" alt="Admin" class="rounded-circle" style="background-color:white ;padding:0.2em" width="150">
                        </div>

                        <div class="d-flex flex-column align-items-left text-left">

                            <div class="mt-3">
                                <h4>@ViewData["Nombre_Entidad"]</h4>
                                <p class="text-secondary mb-1">@ViewData["Resumen"]</p>
                                <br />
                                <button class="btn btn-primary">Sitio web</button>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <!--<div class="card-header">
                        using (Html.BeginForm("Info_Cursos", "Formador", FormMethod.Post))
                        {
                            <input id="IsVisible" name="WhoIsVisible" style="display:none" value="ViewData["Mostrar"]" />
                            <button class="btn ViewData["BTNInfo"]" data-bs-toggle="modal" data-bs-target="#portfolioModal6">Info</button>

                            <button class="btn ViewData["BTNCursos"]">Cursos</button>
                        }
                                    <button href="../Home/Index" class="btn @ViewData["BTNInfo"]" data-bs-toggle="modal" data-bs-target="#portfolioModal6">Info</button>

                                    <button href="../Home/Index" class="btn @ViewData["BTNCursos"]">Cursos</button>
                    </div>-->
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link active" href="../Home/Index">Info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Cursos</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body" id="divDescripcion" style="display:@ViewData["DisplayInfo"]">
                        <button class="btn btn-outline-primary float-end" style="width:fit-content()">Editar</button>
                        <div class="d-flex flex-column align-items-left text-left">
                            <div class="mt-3">
                                <h4>Descripcion.</h4>

                                @if (ViewData["Descripcion"] == null)
                                {

                                    <div class="flex-column align-items-center text-center" name="Button" style="display:@ViewData["DisplayAddButton"]; width: 40%;">
                                        @using (Html.BeginForm("Descripcion_VerAnadir", "Formador", FormMethod.Post))
                                        {
                                            <input id="IsVisible" name="IsVisible" style="display:none" value="@ViewData["DisplayAddButton"]" />
                                            <input type="image" src="~/Content/assets/img/Formador/anyadir.png" value="Descripcion_VerAnadir" class="rounded-circle" style="padding: 0.2em" width="50" />
                                        }
                                        <p class="text-muted font-size-sm">Añadir Descripción</p>
                                    </div>

                                    <div id="addDescripcion" class="flex-column align-items-left text-left" style="width: 60%;display: @ViewData["DisplayAddDescripcion"]">
                                        @using (Html.BeginForm("GuardarDescripcion", "Formador", FormMethod.Post))
                                        {
                                            <textarea name="DescriptionTextArea" style="width:100%" rows="10"></textarea>
                                            <div class="align-items-center text-center">
                                                @ViewBag.ErrorDescription
                                            </div>
                                            <button class="btn btn-primary" style="float:right" value="GuardarDescripcion">Aceptar</button>
                                        }
                                        @using (Html.BeginForm("Descripcion_Cancelar", "Formador", FormMethod.Post))
                                        {
                                            <input id="IsVisible" name="IsVisible" style="display:none" value="@ViewData["DisplayAddDescripcion"]" />
                                            <button class="btn btn-outline-primary" style="float:left" value="Descripcion_Cancelar">Cancelar</button>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="text-secondary mb-1">@ViewData["Descripcion"]</p>
                                }



                            </div>
                        </div>
                        <div class="mt-3" style="width:80%">
                            <h4>Datos de interes.</h4>
                            <div class="row">
                                <div class="col-md-4 columnaHorarios">
                                    <p class="text-secondary mb-1" style="font-weight:bold">Horarios</p>
                                    @foreach (string horario in (List<string>)@ViewData["Horarios"])
                                    {
                                        <div class="card" style="margin:0.3em; width:fit-content">
                                            <div class="card-body">
                                                @horario
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <p class="text-secondary mb-1" style="font-weight:bold">Modalidades</p>
                                    @foreach (string modalidad in (List<string>)@ViewData["Modalidades"])
                                    {
                                        <div class="card" style="margin:0.3em; width:fit-content">
                                            <div class="card-body">
                                                @modalidad
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4"></div>

                            </div>
                            <div class="row">
                                <p class="text-secondary mb-1" style="font-weight:bold">Categorias</p>
                            </div>
                            @for (int i = 0; i < (((List<Categoria>)@ViewData["Categorias"]).Count) / 4 + (((List<Categoria>)@ViewData["Categorias"]).Count) % 4; i++)
                            {
                                int cat = 4 * i;
                                <div class="row">

                                    @for (int y = 0; y < 4 && cat < ((List<Categoria>)@ViewData["Categorias"]).Count; y++, cat++)
                                    {
                                        <div class="col-md-3 align-items-center text-center">
                                            <div class="card" style="margin:0.3em; width:fit-content; min-width:10em">
                                                <div class="card-body">
                                                    @(((List<Categoria>)@ViewData["Categorias"])[cat].Categoria_nombre)
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            <div class="row">
                                <p class="text-secondary mb-1" style="font-weight:bold">Centros</p>
                                <div class="card" style="width:fit-content">
                                    <div class="card-body">
                                        Centros
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body" style="display:@ViewData["DisplayCursos"]" id="divCurso">
                        <div class="d-flex flex-column align-items-left text-left">

                            @foreach (Curso curso in (List<Curso>)ViewData["Cursos"])
                            {
                                <div class="card m-2">
                                    <a href="/Curso/Curso?IdCurso=@curso.Id_curso" style="text-decoration:none">
                                        <div class="card-body" id="divCurso">
                                            <div class="float-end">
                                                @if (DateTime.Compare(curso.Fecha_final, DateTime.Now) < 0)
                                                {
                                                    <p class="text-danger">Curso finalizado</p>
                                                }
                                                else if (DateTime.Compare(curso.Fecha_inicio, DateTime.Now) < 0)
                                                {
                                                    <p class="text-success">Disponible</p>
                                                }
                                                else
                                                {
                                                    <p class="text-warning">Curso en proceso</p>
                                                }

                                            </div>
                                            <div class="d-flex flex-column align-items-left text-left">
                                                <div class="mt-2">
                                                    <div class="row">
                                                        <div class="col-sm-2">
                                                            <h6 class="mb-2">
                                                                <img src="~/Content/assets/img/Formador/defaultImg.png" alt="Admin" width="100">
                                                            </h6>
                                                        </div>

                                                        <div class="col-sm-9">
                                                            <h5>@curso.Curso_nombre</h5>
                                                            <div class="text-secondary">
                                                                Nombre empresa
                                                            </div>
                                                            <div class="text-secondary">
                                                                Horas totales: @curso.Horas_totales
                                                            </div>
                                                            <div class="text-secondary">
                                                                Fecha de inicio: @curso.Fecha_inicio - Fecha de finalicacion: @curso.Fecha_final
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                
            </div>
        </div>
    </div>
</div>
