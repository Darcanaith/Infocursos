
@{
    ViewBag.Title = "FormadorPerfil";
}

<div class="container" style="margin:5em;">
    <div class="main-body">
        <!-- /Breadcrumb -->
        <div class="row gutters-sm">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-left text-left" style="padding:0.5em;background-image: url(/Content/assets/img/Banners/jaggerBanner.png); background-repeat: no-repeat; background-size: 100% 80%;;">
                            @using (Html.BeginForm("UpdateFormadorPerfil", "Formador", FormMethod.Post))
                            {
                                <div class="mt-3 align-items-right text-right" style="text-align:right;">
                                    <button class="btn btn-primary" value="UpdateFormadorPerfil">Editar</button>
                                </div>
                            }
                            <img src="~/Content/assets/img/Formador/huevo.png" alt="Admin" class="rounded-circle" style="background-color:white ;padding:0.2em" width="150">
                        </div>

                        <div class="d-flex flex-column align-items-left text-left">

                            <div class="mt-3">
                                <h4>@ViewData["Nombre_Entidad"]</h4>
                                <p class="text-secondary mb-1">@ViewData["Resumen"]</p>
                                <br />
                                <button class="btn btn-primary">Sitio web</button>

                            </div>
                        </div>
                    </div>
                </div>
                <div class="card mt-3">
                    <div class="card-header">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#portfolioModal6">Info</button>

                        <button class="btn btn-outline-primary">Cursos</button>
                    </div>
                    <div class="card-body" id="divDescripcion">
                        <div class="d-flex flex-column align-items-left text-left">
                            <div class="mt-3">
                                <button class="btn btn-outline-primary float-end" style="width:fit-content()">Editar</button>
                                <h4>Descripcion.</h4>

                                @if (ViewData["Descripcion"] == null)
                                {

                                    <div class="flex-column align-items-center text-center" name="Button" style="display:@ViewData["DisplayAddButton"]; width: 40%;">
                                        @using (Html.BeginForm("Descripcion_VerAnadir", "Formador", FormMethod.Post))
                                        {
                                            <input id="IsVisible" name="IsVisible" style="display:none" value="@ViewData["DisplayAddButton"]" />
                                            <input type="image" src="~/Content/assets/img/Formador/anyadir.png" value="Descripcion_VerAnadir" class="rounded-circle" style="padding: 0.2em" width="50" />
                                        }
                                        <p class="text-muted font-size-sm">Añadir Descripción</p>
                                    </div>

                                    <div id="addDescripcion" class="flex-column align-items-left text-left" style="width: 60%;display: @ViewData["DisplayAddDescripcion"]">
                                        @using (Html.BeginForm("GuardarDescripcion", "Formador", FormMethod.Post))
                                        {
                                            <textarea name="DescriptionTextArea" style="width:100%" rows="10"></textarea>
                                            <div class="align-items-center text-center">
                                                @ViewBag.ErrorDescription
                                            </div>
                                            <button class="btn btn-primary" style="float:right" value="GuardarDescripcion">Aceptar</button>
                                        }
                                        @using (Html.BeginForm("Descripcion_Cancelar", "Formador", FormMethod.Post))
                                        {
                                            <input id="IsVisible" name="IsVisible" style="display:none" value="@ViewData["DisplayAddDescripcion"]" />
                                            <button class="btn btn-outline-primary" style="float:left" value="Descripcion_Cancelar">Cancelar</button>
                                        }
                                    </div>
                                        }
                                        else
                                        {
                                            <p class="text-secondary mb-1">@ViewData["Descripcion"]</p>
                                        }



                            </div>
                            </div>
                        <div class="mt-3">
                            <h4>Datos de interes.</h4>
                            <p class="text-secondary mb-1">Localizaciones</p>
                            <p class="text-secondary mb-1">Horarios usuales</p>
                            <p class="text-secondary mb-1">Otros.</p>
                        </div>
                    </div>
                </div>

                <div class="card-body" style="display:none" id="divCurso">
                    <div class="d-flex flex-column align-items-left text-left">

                        <div class="mt-3">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">
                                        <img src="~/Content/assets/img/Formador/defaultImg.png" alt="Admin" width="100">
                                    </h6>
                                </div>
                                <div class="col-sm-2 text-secondary">
                                    Nombre curso.
                                </div>
                                <div class="col-sm-2 text-secondary">
                                    Nombre formador.
                                </div>
                                <div class="col-sm-2 text-secondary">
                                    Horas.
                                </div>
                                <div class="col-sm-2 text-secondary">
                                    Fecha Inicio-Fecha Final.
                                </div>
                            </div>
                            <hr>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
