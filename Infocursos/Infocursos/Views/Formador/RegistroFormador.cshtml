
@{
    ViewBag.Title = "RegistroFormador";
}


    <!-- Masthead-->
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Avatar Image-->
            <img class="masthead-avatar mb-5" src="~/Content/assets/img/avataaars.svg" alt="..." />
            <!-- Masthead Heading-->
            <h1 class="masthead-heading text-uppercase mb-0">Registro Formador</h1>
            <!-- Icon Divider-->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                <div class="divider-custom-line"></div>
            </div>

        </div>
    </header>


    <!-- Contact Section-->
    <section class="page-section" id="contact">
        <div class="container">
            <!-- Contact Section Form-->
            <div class="row justify-content-center">
                <div class="col-lg-8 col-xl-7">
                    <!-- * * * * * * * * * * * * * * *-->
                    <!-- * * SB Forms Contact Form * *-->
                    <!-- * * * * * * * * * * * * * * *-->
                    <!-- This form is pre-integrated with SB Forms.-->
                    <!-- To make this form functional, sign up at-->
                    <!-- https://startbootstrap.com/solution/contact-forms-->
                    <!-- to get an API token!-->
                    @using (Html.BeginForm("CambioARegistroAlumnor", "Formador", FormMethod.Post))
                    {
                        <div class="flex-row align-items-center text-center">
                            <button class="btn btn-outline-primary" value="CambioARegistroAlumnor" style="margin-right:0.5em">Registrarse como Alumno</button>
                            <button class="btn btn-primary disabled" style="margin-left:0.5em">Registrarse como Formador</button>
                        </div>
                    }
                    @using (Html.BeginForm("Create", "Formador", FormMethod.Post))
                    {
                        if (ViewBag.Message != null)
                        {
                            @ViewBag.Message
                        }
                <form id="contactForm">
                    <!-- Name input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="email" type="email" name="email" value=@ViewData["EmailText"] placeholder="Enter your mail..." data-sb-validations="required" />
                        <label for="email">E-mail</label>
                        @if (ViewBag.ErrorEmail != null)
                        {
                            @ViewBag.ErrorEmail
                        }
                        <div class="invalid-feedback" data-sb-feedback="email:required">A email is required.</div>

                    </div>
                    <!-- Email address input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="password" type="password" name="password" value=@ViewData["PasswordText"] placeholder="Contraseña" data-sb-validations="required,email" />
                        <label for="password">Contraseña</label>
                        @if (ViewBag.ErrorPassword != null)
                        {
                            @ViewBag.ErrorPassword
                        }
                        <div class="invalid-feedback" data-sb-feedback="password:required">An password is required.</div>

                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="password_repetido" name="password_repetido" value=@ViewData["Password_RepetidoText"] type="password" placeholder="Contraseña" data-sb-validations="required,email" />
                        <label for="password">Confirmar contraseña</label>
                        @if (ViewBag.ErrorPassword_repetido != null)
                        {
                            @ViewBag.ErrorPassword_repetido
                        }
                        <div class="invalid-feedback" data-sb-feedback="password:required">An password is required.</div>

                    </div>
                    <div class="form-floating mb-3">
                        <input class="form-control" id="entidad" name="entidad" value=@ViewData["EntidadText"] type="text" placeholder="Entidad" data-sb-validations="required,entidad" />
                        <label for="Entidad">Entidad</label>
                        @if (ViewBag.ErrorEntidad != null)
                        {
                            @ViewBag.ErrorEntidad
                        }
                        <div class="invalid-feedback" data-sb-feedback="nombre:required">An Entidad is required.</div>
                        <div class="invalid-feedback" data-sb-feedback="nombre:password">Entidad is not valid.</div>

                    </div>

                    <div class="form-floating mb-3">
                        <input class="form-control" id="nombre" name="nombre" value=@ViewData["NombreText"] type="text" placeholder="Nombre" data-sb-validations="required,nombre" />
                        <label for="nombre">Nombre</label>
                        @if (ViewBag.ErrorNombre != null)
                        {
                            @ViewBag.ErrorNombre
                        }
                        <div class="invalid-feedback" data-sb-feedback="nombre:required">An nombre is required.</div>
                        <div class="invalid-feedback" data-sb-feedback="nombre:password">nombre is not valid.</div>

                    </div>
                    <!-- Message input-->
                    <div class="form-floating mb-3">
                        <input class="form-control" id="surname" name="apellido" value=@ViewData["ApellidoText"] type="text" placeholder="Enter your surname here..." data-sb-validations="required" />
                        <label for="surname">Apellidos</label>
                        @if (ViewBag.ErrorApellido != null)
                        {
                            @ViewBag.ErrorApellido
                        }
                        <div class="invalid-feedback" data-sb-feedback="message:required">A surname is required.</div>

                    </div>
                    <!-- Submit success message-->
                    <!---->
                    <!-- This is what your users will see when the form-->
                    <!-- has successfully submitted-->
                    <div class="d-none" id="submitSuccessMessage">
                        <div class="text-center mb-3">
                            <div class="fw-bolder">Form submission successful!</div>
                            To activate this form, sign up at
                            <br />
                            <a href="https://startbootstrap.com/solution/contact-forms">https://startbootstrap.com/solution/contact-forms</a>
                        </div>
                    </div>
                    <!-- Submit error message-->
                    <!---->
                    <!-- This is what your users will see when there is-->
                    <!-- an error submitting the form-->
                    <div class="d-none" id="submitErrorMessage"><div class="text-center text-danger mb-3">Error sending message!</div></div>
                    <!-- Submit Button-->
                    
                    <div class="flex-row ">
                        <button class="btn btn-primary btn-xl" id="submitButton" value="Create" type="submit">Crear usuario</button>
                        <label class="float-end" style="padding-top:3em"><a class="nav-link" href="../Home/IniciarSesion" style="text-decoration:none; color:#2C3E50">Ya tienes cuenta? Inicia sesion</a></label>

                    </div>
                </form>
                    }
                </div>
            </div>
        </div>
    </section>


